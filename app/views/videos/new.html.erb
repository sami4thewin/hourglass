<%= form_for @video do |f| %>
<% if @video.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
      <ul>
        <% @video.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= f.label :description %>
<%= f.text_field :description %>
<br>
<%= f.label "Link, please use only the SRC of an embed link!" %>
<%= f.text_field :link %>
<br>
<%= f.fields_for :user_video do |v| %>
 <%= v.label "Enter 1-3 as the number of weeks you'd like your video available for." %>
 <%= v.number_field :expiration %><br>
<% end %>
<br>
<%= f.submit "Submit Video" %>
<% end %>
